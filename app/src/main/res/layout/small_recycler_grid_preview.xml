<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/smallSongArtwork"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:maxWidth="100dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/album_artwork" />

    <TextView
        android:id="@+id/smallSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="@id/smallSongArtwork"
        app:layout_constraintEnd_toEndOf="@id/smallSongArtwork"
        app:layout_constraintTop_toBottomOf="@id/smallSongArtwork" />

    <TextView
        android:id="@+id/smallSongArtistOrCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/onSurface60"
        app:layout_constraintStart_toStartOf="@id/smallSongArtwork"
        app:layout_constraintEnd_toEndOf="@id/smallSongArtwork"
        app:layout_constraintTop_toBottomOf="@id/smallSongTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>